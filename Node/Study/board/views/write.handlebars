<h1>[{{title}}] 글 작성</h1>
<div>
    <!-- 글 쓰기 폼 -->
    <form name "boardForm" method = "post" action = "/write">
    <!-- 제목 입력 칸 -->
    <div>
        <label>제목</label>
        <input type = "text" name = "title" placeholder = "제목을 입력해주세요." value = "" />
    </div>
    <!-- 작성자 입력 칸 -->
    <div>
        <label>이름</label>
        <input type = "text" name = "name" placeholder = "이름을 입력해주세요." value = "" />
    </div>
    <!-- 비밀번호 입력 칸 -->
    <div>
        <label>비밀번호</label>
        <input type = "password" name = "password" placeholder = "비밀번호를 입력해주세요." value = "" />
    </div>
    <!-- 내용 입력 칸 -->
    <div>
        <label>본문을 입력하세요</label><br />
        <textarea name = "content" placeholder = "본문" col = "50" row = "10" value = "" ></textarea>
        <br>
    <!-- 버튼 영역 -->
        <div>
            <button type = "submit">저장</button>
            <button type = "button" onclick = "location.href = '/'">취소</button>
        </div>
    </form>
</div>